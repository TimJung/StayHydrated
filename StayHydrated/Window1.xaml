<Window x:Class="StayHydrated.Notification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StayHydrated"
        mc:Ignorable="d"
        Title="Notification" Height="300" Width="300">
    <Grid>
        <!-- in order to declare a NotifyIcon, all you need is the namespace declaration (see above on line 5) and a single line -->
        <tb:TaskbarIcon x:Name="MyNotifyIcon" IconSource="icons/icon.ico" ToolTipText="Stay Hydrated" />

        <TextBlock Margin="26,26,24,0"
                   VerticalAlignment="Top"
                   FontWeight="Bold"
                   TextWrapping="Wrap"
                   Text="You should see an icon in the tray." />
    </Grid>
</Window>
